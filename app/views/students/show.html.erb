<p style="margin: 35px;"></p>


<div class="row">
  <div class="col-md-7">

    <div class="jumbotron" style="min-height: 480px">
      <div class="page-header">
        <h3><strong><%= @student.person['firstname'] %>, <%= @student.person['lastname'] %></strong> <small>[<%= @student['person']['identification_type'] %> <%= @student['person']['identification_number'] %>]</small></h3>
      </div>

      <div>
        <%= image_tag("student2.jpg", alt: "photo", class: 'photo') %>
      </div>

      <ul class="list-group student-data">
        <li class="list-group-item"><i class="mdi-hardware-phone-android"></i> <strong>Teléfono: </strong><%= render_field @student['person']['phone'] %></li>
        <li class="list-group-item"><i class="mdi-content-mail"></i> <strong>Correo electrónico:</strong> <%= render_field @student['person']['email'] %></li>
        <li class="list-group-item"><i class="mdi-maps-pin-drop"></i><strong>Dirección:</strong> <%= render_address @student['person']['address']%></li>
      </ul>
    </div>
  </div>


  <div class="col-md-3 action-boxes marks">
    <i class="mdi-action-grade"></i>
  <span>
    <h3><%= link_to('Calificaciones', marks_path(id: @student['id'])) %></h3>
    <p class="list-group-item-text">Consultá el historial académico <br> de calificaciones.</p>
    </span>
  </div>
  <div class="col-md-3 action-boxes absences">
    <i class="mdi-action-event"></i><span><h3><%= link_to('Inasistencias', absences_path(id: @student['id'])) %></h3>
  <p class="list-group-item-text">Verificá el registro de inasistencias
    <br>y retrasos a clases.</p></span>
  </div>
  <div class="col-md-3 action-boxes disciplinary_sanctions">
    <i class="mdi-communication-live-help"></i><span><h3><%= link_to('Sanciones disciplinarias', disciplinary_sanctions_path(id: @student['id'])) %></h3>
  <p class="list-group-item-text">Chequeá sanciones disciplinarias <br> y apercibimientos.</p></span>
  </div>


</div>

<%= link_to(chevron_icon + 'Volver', root_path, class: 'btn btn-default btn-xs')%>

<p style="margin: 45px;"></p>