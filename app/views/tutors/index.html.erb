<div class="col-md-12">
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron tutor-view">
        <div class="page-header">
          <h2><strong><%= @person.firstname%>, <%= @person.lastname %></strong><small> (<%= @tutor.tutor_type['name']%>)</small></h2>
        </div>


        <ul class="list-group">
          <li class="list-group-item well well-sm"><h4><strong><%= @person.identification_type %> <%= @person.identification_number %></strong></h4></li>
          <li class="list-group-item well well-sm"><i class="mdi-hardware-phone-android"></i> <strong>Teléfono: </strong><%= render_field @person.phone %></li>
          <li class="list-group-item well well-sm"><i class="mdi-content-mail"></i> <strong>Correo electrónico:</strong> <%= render_field @person.email %></li>
          <li class="list-group-item well well-sm"><i class="mdi-maps-pin-drop"></i><strong>Dirección:</strong> <%= render_address @person.address %></li>


        </ul>
        <div class="well well-lg"><strong>Estudiantes a cargo:</strong>
          <%- @tutor['students'].each do |student| %>
            <span class="label label-warning child"><%= link_to student['name'], student['_links']  %></span>
          <% end %>
        </div>
			</div>
		</div>
	</div>
</div>
